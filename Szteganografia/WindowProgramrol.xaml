<Window x:Class="Szteganografia.WindowProgramrol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="A programról" Width="400" Height="270" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Icon="Images/szteganografia.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <Image Source="Images/szteganografia.png" Stretch="None" />
            <StackPanel Orientation="Vertical" Margin="20">
                <TextBlock Text="Szteganográfia program" FontSize="18" FontWeight="Bold" Margin="0 0 0 10" />
                <TextBlock Text="Készítette: Török Viktor" Margin="0 0 0 10" />
                <TextBlock Text="Mérnökinformatikus [rendszergazda]" />
                <TextBlock Text="FOSZK (L) 2013" />
                <TextBlock Text="2015.05.12." Margin="10 10 0 0" />
            </StackPanel>
        </StackPanel>

        <Button Name="ButtonOk" Grid.Row="1" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" IsDefault="True" Click="ButtonOk_Click" />
        
    </Grid>
</Window>
